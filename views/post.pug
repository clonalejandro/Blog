doctype html
html
    head
        - var blogLogo = "https://es.gravatar.com/userimage/95988980/f3fb5b089aa16571ff40cbcc7657da35.png"
        - var twitter = "@blogClona"
        - var webURI = ""
        - var blogName = "Blog de alex"

        meta(name="DC.title", content=`${title}`)
        meta(property="og:title", content=`${title}`)
        meta(name="twitter:title", content=`${title}`)
        meta(charset="utf-8")
        meta(lang="es")
        meta(http-equiv="Content-Language", content="en")
        meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
        meta(name="description", content=`${description}`)
        meta(name="keywords", content=`${tagsString}`)
        meta(name="author", content=`${author}`)
        link(rel="apple-touch-icon", sizes="120x120", alt=`${title}`, href=`${blogLogo}?size=120`)
        link(rel="apple-touch-icon", sizes="152x152", alt=`${title}`, href=`${blogLogo}?size=152`)
        link(rel="icon", href=`${blogLogo}`, alt=`{title}`, type="image/png")
        link(rel="shortcut icon", href=`${blogLogo}`, alt=`${blogLogo}`, type="image/png")
        meta(name="robots", content="all")
        meta(name="distribution", content="global")
        meta(name="google", content="translate")
        meta(name="DC.creator", content=`${author}`)
        meta(name="DC.description", content=`${description}`)
        meta(property="og:description", content=`${description}`)
        meta(property="og:type", content="website")
        meta(property="og:url", content=`${webURI}`)
        meta(property="og:image", content=`${thumb}`)
        meta(property="og:site_name", content=`${blogName}`)
        meta(name="twitter:card", content="summary")
        meta(name="twitter:site", content=`${twitter}`)
        meta(name="twitter:description", content=`${description}`)
        meta(name="twitter:image", content=`${thumb}`)
        meta(name="twitter:url", content=`${webURI}`)
        meta(name="generator", content="clonacms")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
        meta(name="theme-color", content="#000000")

        title #{title}

        //Adsense
        script(async, src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js")
        script
            include assets/js/adsense.js
        link(href="https://clonalejandro.github.io/cdn/clonaweb/malextrap.min.css", rel="stylesheet")
        if isAuthenticated
            style
                include assets/editor/editor.css
        style 
            include assets/css/style.css
            include assets/css/post.css
    body
        div#wrapper
            div.navbar
                div.nav-container
                    a.no-decoration(href="/") Home
                    a.no-decoration.item Search
                    a.no-decoration.item(href="mailto:contact@clonalejandro.me") Contact
            header.header
                div.title
                    h1.headline #{title}
                    h2.subtitle#description #{description}
                    img.thumb(src=`${thumb}`)
            div.container
                span.border
                    span.border-title #{title}
                div#content
                    != content
                div.post-footer
                    div.columns
                        div.post-info
                            strong #{author} 
                            br
                            span.date On #{date}
                        div.tags
                            each tag in tags
                                label.label.tag= tag
                if isAuthenticated
                    br
                    span.border
                        span.border-title Editor
                    textarea#editor
                    br
                    center
                        button.btn.adapter.btn-icon.green.animated.updater(id=`${id}`, onclick="onUpdaterClick()") Update
                            i.icon.icons-upload
        
        include components/footer.pug
        include components/script.pug
        if isAuthenticated
            script
                include assets/editor/editor.min.js
        script
            include assets/js/post.js